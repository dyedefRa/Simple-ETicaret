
@{
    ViewBag.Title = "Rol Ata";
}

@model string

<div class="row">

    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Rol Ata
                </div>
                <div class="block-controls">
                    <a href="/Kullanici/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Kullanici/RolAta" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kullanıcı Adı</label>
                            <select name="kullaniciAdi" class="form-control">
                                @foreach (MembershipUser kul in ViewBag.kullanici)
                                {
                        <option value="@kul.UserName"> @kul.UserName</option>
}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Roller :</label>
                            <select name="rolAdi" class="form-control">
                                @foreach (string rol in ViewBag.roller)
                                {
                                    <option value="@rol"> @rol</option>
                                }
                            </select>
                        </div>



                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>

                </div>
            </div>
        </div>

    </div>

</div>