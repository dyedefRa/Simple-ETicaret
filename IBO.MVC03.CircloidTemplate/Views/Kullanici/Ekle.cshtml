
@{
    ViewBag.Title = "Üye Ekle";
}
@section head{
    <style>
        #hata{
            color:red;
            font-size:16px;
        }
    </style>
    }

<div class="row">

    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Üye Ekle
                </div>
                <div class="block-controls">
                    <a href="/Kullanici/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Kullanici/Ekle" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kullanıcı Adı</label>
                            <input name="kullaniciAdi" type="text" class="form-control" id="exampleInputEmail1" placeholder="Kullanıcı Adı Giriniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Parola</label>
                            <input name="parola" type="password" class="form-control" id="exampleInputPassword1" min="3" placeholder="Parola Giriniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Email</label>
                            <input name="email" type="text" class="form-control" id="exampleInputPassword1" placeholder="Email Giriniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Gizli Soru</label>
                            <input name="gizliSoru" type="text" class="form-control" id="exampleInputPassword1" placeholder="Gizli Soru Giriniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Gizli Cevap</label>
                            <input name="gizliCevap" type="text" class="form-control" id="exampleInputPassword1" placeholder="Gizli Cevap Giriniz">
                        </div>




                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                    <span id="hata"> @ViewBag.mesaj</span>
                </div>
            </div>
        </div>

    </div>

</div>

