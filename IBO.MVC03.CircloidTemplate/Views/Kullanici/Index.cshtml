
@{
    ViewBag.Title = "Üyeler";
}

@model MembershipUserCollection

<div class="row">

    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2"> Üyeler</div>


                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Kullanici/Ekle" class="btn btn-success" role="button">Yeni Üye</a>
                    <a class="btn btn-primary" href="/Kullanici/RolAta">Rol Ekle</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Kullanıcı Adı</th>
                                <th>Email</th>
                                <th>Kayıt Tarihi</th>
                                <th>Son Giriş Tarihi</th>
                                <th>Rolleri</th>
                              
                                <th>Sil</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (MembershipUser uye in Model)
                            {
                            <tr>
                                <td>@uye.UserName</td>
                                <td>@uye.Email</td>
                                <td>@uye.CreationDate</td>
                                <td>@uye.LastLoginDate</td>
                                <td><a class="btn btn-primary rolleri" data-uyeadi="@uye.UserName" href="#">Rolleri</a> </td>
                        
                                <td>  <a class="btn btn-danger uyeSil" href="#" data-uyeadi="@uye.UserName">Sil</a></td>
                            </tr>

                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(".rolleri").click(function () {
            var uye = $(this).data("uyeadi");
            $.ajax({
                type: "POST",
                url: "/Kullanici/UyeRolleri/",
                data:{ka: uye },
                success: function (veri) {
                    alert(veri)
                }
            })
        })
    </script>
    }
