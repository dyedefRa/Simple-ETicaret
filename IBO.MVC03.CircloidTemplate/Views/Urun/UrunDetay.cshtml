
@{
    ViewBag.Title = "Ürün Detay";
}
@model Products

<div class="row">

    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürünler
                </div>

                <div class="block-controls">

                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Urun/UrunEkle" class="btn btn-success rounded" role="button">Yeni Ürün</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Ürün Adı</th>
                                <th>Tedarikçi</th>
                                <th>Kategori</th>
                                <th>Birimdeki Miktar</th>
                                <th>Stok</th>
                                <th>Yeni Satış</th>
                                <th>En az Yeniden Satış Miktarı</th>
                                <th>Sonlandı</th>
                                <th>Sil</th>
                            

                            </tr>
                        </thead>

                        <tbody>
                         
                                <tr>
                                    <td><span class="label label-info">@Model.ProductName </span>  </td>
                                    @if (Model.Supplier == null)
                                    {
                                        <td>(Gizli Firma)</td>
                                    }
                                    else
                                    {
                                        <td>@Model.Supplier.CompanyName</td>
                                    }
                                    @if (Model.Category == null)
                                    {
                                        <td>---</td>
                                    }
                                    else
                                    {
                                        <td>@Model.Category.CategoryName</td>
                                    }


                                    <td> <span class="label label-primary">@Model.UnitPrice</span></td>
                                    <td>@Model.UnitsInStock</td>
                                    <td>@Model.UnitsOnOrder</td>
                                    <td> <span class="label label-warning">@Model.QuantityPerUnit</span></td>
                                    @if ((Boolean)Model.Discontinued)
                                    {
                                        <td>
                                            <span class="label label-danger">Tükendi</span>
                                        </td>
                                    }
                                    else
                                    {
                                        <td><span class="label label-success">Stokta var</span></td>
                                    }


                                    @*<td> <a href="/Urun/Sil/Model.@ModelductId" class="btn btn-danger ">Sil</a> </td>*@
                                    <td> <a href="/Urun/Index" class="btn btn-primary">Geri Dön</a> </td>
                                </tr>

                            }







                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
