
@{
    ViewBag.Title = "Ürün Sil";
}
@model Products

<div class="row">

    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürün Silme Sayfası
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Urun/Index" class="btn btn-success rounded" role="button">İptal</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Urun/Sil" method="post">
                        <input type="hidden" name="ProductId" value="@Model.ProductId" />
                        <label>@Model.ProductName ürünü silinsin mi ?</label>
                        <input class="btn btn-danger" type="submit"  value="EVET" />

                    </form>
                </div>
            </div>
        </div>
</div>
    </div>

